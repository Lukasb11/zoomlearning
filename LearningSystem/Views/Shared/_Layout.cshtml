<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Zoom learning</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<style>
    .white {
        clear: both;
        margin: 10px 5px;
        text-align: center;
        color: white;
    }

    .topnav-right {
        float: right;
    }

</style>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Zoom learning system", "Index", "Course", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {


                        <li>
                            @Html.ActionLink("Courses dashboard", "Index", "Course")
                        </li>

                        <li>
                            @Html.ActionLink("Subscribed Courses", "SubscribedCourses", "Course")
                        </li>
                        if ((int?)Session["Type"] == 2)
                        {
                            <li>
                                @Html.ActionLink("My Created Courses", "MyCourses", "Course")
                            </li>
                        }
                        <li>
                            @Html.ActionLink("User Details", "Index", "User")
                        </li>

                        <li>
                            @Html.ActionLink("Log Out", "Logout", "Auth")
                        </li>

                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Login", "Login", "Auth")
                        </li>
                        <li>
                            @Html.ActionLink("Register", "Register", "Auth")
                        </li>
                    }

                </ul>
               

            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year, Lukas Backevičius, PRIf-18/4</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>

@functions{

    public static bool isLecturer()
    {
       
        return true;
    }
}