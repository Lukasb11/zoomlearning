@model IEnumerable<LearningSystem.Models.course>

@{
    ViewBag.Title = "List of courses";
}

<h2>List of my created courses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Course name
        </th>
        <th>
            Course description
        </th>
        <th>
            Course length
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.course_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course_desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course_length) minutes
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.course_id }) |
                @Html.ActionLink("Get recording", "ZoomRecording", new { id = item.course_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.course_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.course_id })
            </td>
        </tr>
    }
</table>
@if (Model.Count() == 0)
{
    <H2>
        No courses found!
    </H2>
}