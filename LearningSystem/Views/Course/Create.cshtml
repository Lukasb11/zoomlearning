@model LearningSystem.ViewModel.CreateCourse
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div>
    @using (Html.BeginForm("Create", "Course"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.course_name)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.course_name, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.course_desc)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.course_desc, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.course_desc_long)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.course_desc_long, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.course_length)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.course_length, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.start_date)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.start_date, new { @ID = "datetimepicker1" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.auto_recording)</div>
            <div class="col-lg-10">@Html.CheckBoxFor(a => a.auto_recording, new { @class = "form-control" })</div>
        </div><br />
        <input type="submit" value="Create" class="btn btn-primary" />
    }

</div>
@section scripts
{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
    </script>
  
}

